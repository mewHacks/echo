{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "skipLibCheck": true,
        "baseUrl": "./"
    },
    "include": [
        "core/server-state.js",
        "core/intervention-planner.js",
        "core/analyzer.js",
        "core/observer.js",
        "core/memory-tools.js",
        "gemini-live.js"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        "backup",
        "discord-client.js",
        "gemini-client.js",
        "utils/debugging.js"
    ]
}